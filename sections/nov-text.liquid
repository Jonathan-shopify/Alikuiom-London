{% assign sst = section.settings %}
<div class="distance{% if sst.animate == true %} wow fadeInUp animated{% endif %}{% if sst.class != blank %} {{ sst.class }}{% endif %}">
  {% if sst.container == 'container' %}
    <div class="container">
  {% elsif sst.container == 'container-fluid' %}
    <div class="container-fluid">
  {% else %}
    <div class="container-full">
  {% endif %} 
    <div class="nov-block__text {{ sst.title_alignment }}">
      {% for block in section.blocks %}
        {% assign bst = block.settings %}
        {% if block.type == 'text' %}
          <div class="nov-text {{ bst.t_fw }} block-{{ forloop.index }}">{{ bst.text }}</div>
        {% endif %}
        {% if block.type == 'btn' %}
          <a href="{{ bst.btn_link }}" class="btn btn-{{ bst.btn_size }} block-{{ forloop.index }}">{{ bst.btn }}</a>
        {% endif %}
        {% if block.type == 'policy' %}
          <div class="policy block-{{ forloop.index }}">
            <div class="row">
              {% if bst.p1 != blank %}
                <div class="policy-item col-sm d-flex align-items-center text-left mb-xs-20">
                  {% if bst.icon1 != blank %}
                    <div class="p-icon"><img data-src="{{ bst.icon1 | img_url: '100x' }}" class="lazyload"></div>
                  {% endif %}
                  <span class="font-600">{{ bst.p1 }}</span>
                </div>
              {% endif %}
              {% if bst.p2 != blank %}
                <div class="policy-item col-sm d-flex align-items-center text-left mb-xs-20">
                  {% if bst.icon2 != blank %}
                    <div class="p-icon"><img data-src="{{ bst.icon2 | img_url: '100x' }}" class="lazyload"></div>
                  {% endif %}
                  <span class="font-600">{{ bst.p2 }}</span>
                </div>
              {% endif %}
              {% if bst.p3 != blank %}
                <div class="policy-item col-sm d-flex align-items-center text-left">
                  {% if bst.icon3 != blank %}
                    <div class="p-icon"><img data-src="{{ bst.icon3 | img_url: '100x' }}" class="lazyload"></div>
                  {% endif %}
                  <span class="font-600">{{ bst.p3 }}</span>
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
