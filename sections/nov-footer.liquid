      </div>
    </div>
  {% endif %}
  {% if sst.newsletter == true %}
    <div class="block_newsletter text-center footer_newsletter pt-50 pb-30">
      <div class="container">
        {% if sst.img_newsletter != blank %}
          <img data-wpsob="1" data-wpsob-height="1" height="1" data-wpsob-width="1" width="1" data-wpsob-lazy="1" loading="lazy" data-src="{{ sst.img_newsletter | img_url: '512x' }}" class="lazyload img-fluid mb-20" alt="{{ sst.payment.alt }}">
        {% endif %}
        {% if sst.newsletter_title != blank or sst.newsletter_des != blank %}
        <div class="mb-20">
          <div class="title font-700 f_pr{% if sst.newsletter_des != blank %} mb-25{% endif %}" style="color: {{ sst.newsletter_title_c }}">{{ sst.newsletter_title }}</div>
          {% if sst.newsletter_des != blank %}
            <div class="sub_title mb-35" style="color: {{ sst.newsletter_des_c }}">{{ sst.newsletter_des }}</div>
          {% endif %}
        </div>
        {% endif %}
        {% form 'customer', id: 'footer_contact' %}
          {{ form.errors | default_errors }}
          {% if form.posted_successfully? %}
            <p class="form--success text-center">{{ 'general.newsletter_form.confirmation' | t }}</p>
          {% else %}
            <div class="input-group">
              <i class="zmdi zmdi-email c_df"></i>
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input type="email"
                name="contact[email]"
                id="Email_Footer"
		required
                class="input-group__field newsletter__input form-control"
                value="{% if customer %}{{ customer.email }}{% endif %}"
                placeholder="{{ 'general.newsletter_form.email_newsletter' | t }}">
                <button type="submit" class="btn newsletter__submit" name="commit">
                  {{ 'general.newsletter_form.submit' | t }}
                </button>
            </div>
          {% endif %}
        {% endform %}
      </div>
    </div>
  {% endif %}
  <div class="footer_copyright pb-sm-50">
    <div class="container">
      <div class="text-center pt-30 pb-30">
        {% if sst.payment != blank or shop.enabled_payment_types %}
          <div class="footer__payment d-flex flex-wrap justify-content-center mb-20">
            {% if sst.payment != blank %}
