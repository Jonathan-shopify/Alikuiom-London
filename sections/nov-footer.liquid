                          {% endif %}
                          {% include 'nov-block-currency', type: 'dropdown' %}
                        </div>
                      {% endif %}
                      {%- if bst.enable_language and localization.available_languages.size > 1 -%}
                        <div>
                          {% if bst.l_t != blank %}
                            <div class="title text-uppercase mt-25 mb-15">{{ bst.l_t }}</div>
                          {% endif %}
                          {% include 'nov-block-language' %}
                        </div>
                      {%- endif -%}
                      {% if bst.social %}
                        <div>
                          {% if bst.s_t != blank %}
                            <div class="title text-uppercase mt-25 mb-15">{{ bst.s_t }}</div>
                          {% endif %}
                          {% include 'nov-social' %}
                        </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            {% endif %}
