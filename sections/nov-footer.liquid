{% assign sst = section.settings %}
<footer{% if sst.animate == true %} class="wow fadeInUp animated"{% endif %} data-section-id="{{ section.id }}" data-section-type="nov-slick">
  {% if section.blocks.size > 0 %}
    <div class="container">
      <div class="footer-layout pt-95 pb-25">
        <div class="row">
          {% for block in section.blocks %}
            {% assign bst = block.settings %}
            {% if block.type == 'block_contact' %}
              <div class="footer_contact block_footer{% if bst.block_title != blank and sst.mobile_acc %} mt-xs-0 mb-xs-0{% endif %} {{ bst.grid_xl }} {{ bst.grid_lg }} {{ bst.grid_md }} {{ bst.grid_sm }}{% if bst.block_class != blank %} {{ bst.block_class }}{% endif %}">
                <div class="block h-100">
                  {% if bst.block_title != blank %}
                  <div class="title-block position-relative">
                    {{ bst.block_title }}
                    {% if sst.mobile_acc %}
                      <span class="f_btn_sl d-sm-none"><i class="zmdi zmdi-plus"></i></span>
                    {% endif %}
                  </div>
                  {% endif %}
                  <div class="block-content{% if bst.block_title != blank and sst.mobile_acc %} h_t{% endif %}">
                    <div class="pb-xs-30">
                      {% if bst.contact_phone != blank %}
                        <div class="contact d-flex">
                          {% if bst.i-p != blank %}
                            <div><img data-wpsob="1" data-wpsob-height="1" height="1" data-wpsob-width="1" width="1" data-wpsob-lazy="1" loading="lazy" src="{{ bst.i-p | img_url: '25x' }}"></div>
                          {% else %}
                            <i class="zmdi zmdi-phone"></i>
                          {% endif %}
                          <div class="number">
                            {{ bst.contact_phone }}</br>{{ bst.contact_phone_2 }}
                          </div>
                        </div>
                      {% endif %}
                      {% if bst.contact_email != blank %}
                        <div class="contact d-flex">
                          {% if bst.i-e != blank %}
                            <div><img data-wpsob="1" data-wpsob-height="1" height="1" data-wpsob-width="1" width="1" data-wpsob-lazy="1" loading="lazy" src="{{ bst.i-e | img_url: '25x' }}"></div>
                          {% else %}
                            <i class="zmdi zmdi-email"></i>
                          {% endif %}
                          <div class="email">
                            <div>{{ bst.contact_email }}</br>{{ bst.contact_email_2 }}</div>
                          </div>
                        </div>
                      {% endif %}
                      {% if bst.contact_address != blank %}
                        <div class="contact d-flex">
                          {% if bst.i-a != blank %}
                            <div><img data-wpsob="1" data-wpsob-height="1" height="1" data-wpsob-width="1" width="1" data-wpsob-lazy="1" loading="lazy" src="{{ bst.i-a | img_url: '25x' }}"></div>
                          {% else %}
                            <i class="zmdi zmdi-pin"></i>
                          {% endif %}
                          <div class="content-address">{{ bst.contact_address }}</div>
                        </div>
                      {% endif %}
                      {% if bst.contact_open != blank %}
                        <div class="contact d-flex">
                          {% if bst.i-o != blank %}
                            <div><img data-wpsob="1" data-wpsob-height="1" height="1" data-wpsob-width="1" width="1" data-wpsob-lazy="1" loading="lazy" src="{{ bst.i-o | img_url: '25x' }}"></div>
                          {% else %}
                            <i class="zmdi zmdi-time"></i>
                          {% endif %}
                          <div class="content-open">{{ bst.contact_open }}</div>
                        </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            {% endif %}

            {% if block.type == 'block_menu' %}
