{% assign sst = section.settings %}
{%- assign xxl = 100 | divided_by: sst.xxl -%}
{%- assign xl = 100 | divided_by: sst.xl -%}
{%- assign lg = 100 | divided_by: sst.lg -%}
{%- assign md = 100 | divided_by: sst.md -%}
{%- assign sm = 100 | divided_by: sst.sm -%}
{%- assign xs = 100 | divided_by: sst.xs -%}
<div class="distance position-relative{% if sst.style == 'style2' and sst.banner == blank %} style2{% endif %}{% if sst.class != blank %} {{ sst.class }}{% endif %}{% if sst.animate == true %} wow fadeInUp animated{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  {% if sst.container == 'container' %}
    <div class="container">
  {% elsif sst.container == 'container-fluid' %}
    <div class="container-fluid">
  {% else %}
    <div class="container-full" style="padding: 0 {{ sst.spacing | append: 'px' }}">
  {% endif %}
    {% if sst.style == 'style1' or sst.banner != blank %}
      {% if sst.heading != blank or sst.subheading != blank %}
        <div class="title_section {{ sst.title_alignment }}">
          {% if sst.heading != blank %}
            <span class="title" style="color: {{ sst.heading_c }};">{{ sst.heading }}</span>
          {% endif %}
          {% if sst.subheading != blank %}
            <span class="sub_title" style="color: {{ sst.subheading_c }};">{{ sst.subheading }}</span>
          {% endif %}
          {% if sst.btn_all != blank %}
            <a href="{{ sst.link }}" class="btn btn_all btn-medium mt-35">{{ sst.btn_all }}</a>
          {% endif %}
        </div>
      {% endif %}
    {% endif %}
    {% if sst.banner != blank %}
      <div class="row{% if sst.bn_p == 'right' %} flex-md-row-reverse{% endif %} position-relative">
        <div class="ps_bn col-xl-5 col-md-6 mb-sm-30 position-relative text-center">
          <div class="ps_bn-cotent nov-sh-image-2 h-100">
            {% assign img_url = sst.banner %}
            <a href="{{ sst.bn_l }}">
              <div class="respone_image h-100 nov-sh-image-2" style="padding-top:{{ 1 | divided_by: img_url.aspect_ratio | times: 100}}%;">
                <img class="lazyload h-100"
                src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1 1'%3E%3C/svg%3E"
                data-src="{{ img_url | img_url: '180x' }}"
                data-srcset="{{ img_url | img_url: '180x' }} 180w,{{ img_url | img_url: '380x' }} 380w,{{ img_url | img_url: '580x' }} 580w,{{ img_url | img_url: '768x' }} 768w,{{ img_url | img_url: '900x' }} 900w,{{ img_url | img_url: '1080x' }} 1080w,{{ img_url | img_url: '1170x' }} 1200w,{{ img_url | img_url: '1512x' }} 1512w,{{ img_url | img_url: '1728x' }} 1728w, {{ img_url | img_url: '2048x' }} 2048w" data-sizes="auto" alt="{{ img_url.alt }}" style="object-fit: cover">
              </div>
            </a>
            {% if sst.bn_t != blank or sst.bn_st != blank or sst.bn_btn != blank %}
              <div class="title_section mb-0 bn-block__content position-absolute">
                {% if sst.bn_t != blank %}<span class="title white">{{ sst.bn_t }}</span>{% endif %}
                {% if sst.bn_st != blank %}<div class="sub_title white mt-20">{{ sst.bn_st }}</div>{% endif %}
                {% if sst.bn_btn != blank %}<a href="{{ sst.bn_l }}" class="bn-title btn mt-55">{{ sst.bn_btn }}</a>{% endif %}
              </div>
            {% endif %}
          </div>
        </div>
        <div class="col-xl-7 col-md-6">
    {% endif %}
    {% if sst.style == 'style2' and sst.banner == blank %}
      <div class="row align-items-center">
        <div class="block-title col-xl-3 col-md-4">
          {% if sst.show_nav != blank %}
            <div class="d-none d-md-flex mb-55 mb-md-25">
              <div class="btn-nav--slider nav-slider--prev"><i class="rbb-icon-direction-36"></i></div>
              <div class="btn-nav--slider nav-slider--next"><i class="rbb-icon-direction-39"></i></div>
            </div>
          {% endif %}
          <div class="title_section {{ sst.title_alignment }} mb-0 mb-sm-30">
            {% if sst.subheading != blank %}
              <span class="sub_title mt-0 pb-15" style="color: {{ sst.subheading_c }};">{{ sst.subheading }}</span>
            {% endif %}
            {% if sst.heading != blank %}
              <span class="title d-block" style="color: {{ sst.heading_c }};">{{ sst.heading }}</span>
            {% endif %}
            {% if sst.btn_all != blank %}
              <a href="{{ sst.link }}" class="btn btn_all btn-medium{% if sst.heading != blank or sst.subheading != blank %} mt-45 mt-md-25{% endif %}">{{ sst.btn_all }}</a>
            {% endif %}
          </div>
        </div>
        <div class="col-xl-9 col-md-8">
    {% endif %}
    {% comment %} product slider {% endcomment %}
    {%- assign collection = collections[sst.collection] -%}
    {%- assign product_limit = sst.limit -%}
    <div class="grid--view-items nov-slick-carousel row spacing-{{ sst.spacing }}{% if sst.banner != blank %} position-static{% endif %}{% if sst.show_dot == true %} pb-30{% endif %}"
      data-autoplay="false" 
      data-autoplayTimeout="6000" 
      data-loop="false"
      data-dots="{{ sst.show_dot }}"
      data-nav="{%- if sst.style == 'style2' -%}false{%- else -%}{{ sst.show_nav }}{%- endif -%}"
      data-row="{{ sst.row_number }}"
      data-row_mobile="{{ sst.row_mobile }}"
      data-items_xxl="{{ sst.xxl }}"
      data-items="{{ sst.xl }}"
      data-items_lg="{{ sst.lg }}"
      data-items_md="{{ sst.md }}"
      data-items_sm="{{ sst.sm }}"
      data-items_xs="{{ sst.xs }}"
      {% if sst.style == 'style2' %}data-custnav{%- endif -%}>
      {% for product in collection.products limit: product_limit %}
        {% if sectionId == blank %}
          {% assign sectionId = section.id %}
        {% endif %}
        <div class="block">
          <div>
            <div class="item p_item col">
              {% render 'product-grid-item-style-1', product: product, sectionId: sectionId %}
            </div>
          </div>
        </div>
      {% else %}
          {%- for i in (1..6) -%}
            <div class="item p_item mb-30">
              {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
              {{ 'product-apparel-' | append: current | placeholder_svg_tag : 'placeholder-svg' }}
            </div>
          {%- endfor -%}
      {% endfor %}
    </div>
    {% if sst.viewall %}
    <div class="text-center mt-55 mt-lg-30">
      <a href="{{ collection.url }}" class="btn btn-viewall btn-xlarge">{{ 'sections.product_slider.view_all_collection' | t }}</a>
    </div>
    {% endif %}
    {% comment %} end product slider {% endcomment %}
    {% if sst.style == 'style2' and sst.banner == blank %}
        </div>
      </div>
    {% endif %}
    {% if sst.banner != blank %}
       </div>
      </div>
    {% endif %}
  </div>
</div>
{% schema %}
  {
    "name": "Vinova Products Slider",
    "class": "section-product-slider",
    "settings": [
      {
        "type": "richtext",
        "id": "heading",
        "label": "Heading",
        "default": "<p>Vinova Product Slider</p>"
      },
      {
        "type": "color",
        "id": "heading_c",
        "label": "Heading color",
        "default": "#222222"
      },
      {
        "type": "richtext",
        "id": "subheading",
        "label": "Sub heading",
        "default": "<p>Subtitle from happy customers</p>"
      },
      {
        "type": "color",
        "id": "subheading_c",
        "label": "Sub heading color",
        "default": "#666666"
      },
      {
        "type": "text",
        "id": "btn_all",
        "label": "Button",
        "default": "Shop all"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Button link"
      },
      {
        "type": "select",
        "id": "title_alignment",
        "label": "Heading alignment",
        "default": "text-left",
        "options": [
          {
            "value": "text-left",
            "label": "Left"
          },
          {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ]
      },
      {
        "type":  "header",
        "content": "Block banner"
      },
      {
        "type": "image_picker",
        "id": "banner",
        "label": "Banner"
      },
      {
        "type": "text",
        "id": "bn_t",
        "label": "Banner title"
      },
      {
        "type": "inline_richtext",
        "id": "bn_st",
        "label": "Banner sub title"
      },
      {
        "type": "text",
        "id": "bn_btn",
        "label": "Banner button text"
      },
      {
        "type": "url",
        "id": "bn_l",
        "label": "Banner link"
      },
      {
        "type": "select",
        "id": "bn_p",
        "label": "Banner position",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
        "type":  "header",
        "content": "Block product"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "checkbox",
        "id": "viewall",
        "label": "Show button view all"
      },
      {
        "type":  "header",
        "content": "Product item per row"
      },
      {
        "type": "range",
        "id": "xxl",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Extra desktop",
        "default": 4,
        "info": "Breakpoint 1440px ↑"
      },
      {
        "type": "range",
        "id": "xl",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Large desktop",
        "default": 4,
        "info": "Breakpoint 1200px ↑"
      },
      {
        "type": "range",
        "id": "lg",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Desktop",
        "default": 4,
        "info": "Breakpoint 992px ↑"
      },
      {
        "type": "range",
        "id": "md",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Tablet",
        "default": 3,
        "info": "Breakpoint 768px ↑"
      },
      {
        "type": "range",
        "id": "sm",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Large mobile",
        "default": 2,
        "info": "Breakpoint 576px ↑"
      },
      {
        "type": "range",
        "id": "xs",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Mobile",
        "default": 2,
        "info": "Breakpoint 575px ↓"
      },
      {
        "type": "range",
        "id": "limit",
        "min": 4,
        "max": 30,
        "step": 1,
        "label": "Limit",
        "default": 30,
        "info": "Select number limit products"
      },
      {
        "type": "range",
        "id": "spacing",
        "min": 0,
        "max": 30,
        "step": 5,
        "unit": "px",
        "label": "Spacing",
        "default": 30,
        "info": "Spacing item"
      },
      {
        "type":  "header",
        "content": "Slider options"
      },
      {
        "type": "range",
        "id": "row_number",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Number row",
        "default": 1
      },
      {
        "type": "range",
        "id": "row_mobile",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Number row mobile",
        "default": 1
      },
      {
        "type": "checkbox",
        "id": "show_dot",
        "label": "Show dots",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_nav",
        "label": "Show navigation",
        "default": false
      },
      {
        "type":  "header",
        "content": "Style"
      },
      {
        "type": "select",
        "id": "style",
        "label": "Style",
        "default": "style1",
        "options": [
          { "value": "style1", "label": "Style 1" },
          { "value": "style2", "label": "Style 2" }
        ],
        "info": "Use style 2 in case banner image is empty"
      },
      {
        "type":  "header",
        "content": "Button style"
      },
      {
        "type": "color",
        "id": "h_btn_c",
        "label": "Button color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "h_btn_ch",
        "label": "Button hover color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "h_btn_b",
        "label": "Button background",
        "default": "#444444"
      },
      {
        "type": "color",
        "id": "h_btn_bh",
        "label": "Button hover background",
        "default": "#222222"
      },
      {
        "type":  "header",
        "content": "Design option"
      },
      {
        "type": "checkbox",
        "id": "animate",
        "label": "Show animated",
        "default": true
      },
      {
        "type": "select",
        "id": "container",
        "label": "Container",
        "default": "container",
        "options": [
          { "value": "container", "label": "Container" },
          { "value": "container-fluid", "label": "Container fluid" },
          { "value": "container-full", "label": "Container full width" }
        ]
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background colors"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image"
      },
      {
        "type": "text",
        "id": "class",
        "label": "Class"
      },
      {
        "type": "number",
        "id": "distance_top",
        "label": "Top spacing section (px)",
        "default": 30
      },
      {
        "type": "number",
        "id": "distance_bottom",
        "label": "Bottom spacing section (px)",
        "default": 30
      }
    ],
    "presets": [
      {
        "name": "Vinova Products Slider",
        "category": "Collection"
      }
    ]
  }
{% endschema %}
{%- assign bg_image = sst.background_image -%}
<style>
  #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
    width: {{ xs }}%;
    flex: 0 0 {{ xs }}%;
  }
  @media(min-width:  576px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ sm }}%;
      flex: 0 0 {{ sm }}%;
    }
  }
  @media(min-width:  768px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ md }}%;
      flex: 0 0 {{ md }}%;
    }
  }
  @media(min-width:  992px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ lg }}%;
      flex: 0 0 {{ lg }}%;
    }
  }
  @media(min-width:  1200px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ xl }}%;
      flex: 0 0 {{ xl }}%;
    }
  }
  @media(min-width:  1440px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ xxl }}%;
      flex: 0 0 {{ xxl }}%;
    }
  }
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ sst.distance_top }}px;
    padding-bottom: {{ sst.distance_bottom }}px;
    {%- assign bg_image = sst.background_image -%}
    {% if sst.background_color != blank %}
      background-color: {{ sst.background_color }};
    {% endif %}
    {% if bg_image.src != blank %}
      background-image: url("{{ bg_image | img_url: '1920x' }}"); background-repeat: no-repeat; background-position: center top; background-size: cover;
    {% endif %}
  }
  @media(max-width: 991px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top | times: 0.7 | round: 0 | append: 'px' }};
      padding-bottom: {{ sst.distance_bottom | times: 0.7 | round: 0 | append: 'px' }};
    }
  }
  #shopify-section-{{ section.id }} .btn-viewall, #shopify-section-{{ section.id }} .btn_all {
    color: {{ sst.h_btn_c }};
    background-color: {{ sst.h_btn_b }}
  }
  #shopify-section-{{ section.id }} .btn-viewall:hover, #shopify-section-{{ section.id }} .btn_all:hover {
    color: {{ sst.h_btn_ch }};
    background-color: {{ sst.h_btn_bh }};
  }
</style>