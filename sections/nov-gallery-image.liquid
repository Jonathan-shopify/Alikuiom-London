      {
        "type": "checkbox",
        "id": "animate",
        "label": "Show animated",
        "default":   true
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background colors"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image"
      },
      {
        "type": "select",
        "id": "container",
        "label": "Container",
        "default": "container",
        "options": [
          { "value": "container", "label": "Container" },
          { "value": "container-fluid", "label": "Container fluid" },
          { "value": "container-full", "label": "Container full width" }
        ]
      },
      {
        "type": "text",
        "id": "class_section",
        "label": "Class"
      },
      {
        "type": "number",
        "id": "distance_top",
        "label": "Top spacing section (px)",
        "default": 30
      },
      {
        "type": "number",
        "id": "distance_bottom",
        "label": "Bottom spacing section (px)",
        "default": 30
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "image_picker",
            "id": "img_xs",
            "label": "Image mobile 575px â†“"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "========================"
          },
          {
            "type": "text",
            "id": "cta_label",
            "label": "Caption 1",
            "default": "Lorem ipsum"
          },
          {
            "type": "color",
            "id": "cta_label_c",
            "label": "Caption 1 color",
            "default": "#222222"
          },
          {
            "type": "number",
            "id": "cta_label_n",
            "label": "Caption 1 font size",
            "default": 22
          },
          {
            "type": "richtext",
            "id": "cta_label2",
            "label": "Caption 2",
            "default": "<p>Quisque id odio sit amet erat</p>"
          },
          {
            "type": "color",
            "id": "cta_label2_c",
            "label": "Caption 2 color",
            "default": "#222222"
          },
          {
            "type": "number",
            "id": "cta_label2_n",
            "label": "Caption 2 font size",
            "default": 16
          },
          {
            "type": "text",
            "id": "btn_label",
            "label": "Text button",
            "default": "Shop now"
          },
          {
            "type": "color",
            "id": "btn_label_c",
            "label": "Text button color",
            "default": "#ffffff"
          },
          {
            "type": "color",
            "id": "btn_label_ch",
            "label": "Button color hover",
            "default": "#ffffff"
          },
          {
            "type": "color",
            "id": "btn_label_br",
            "label": "Button border color",
            "default": "#ffffff"
          },
          {
            "type": "color",
            "id": "btn_label_b",
            "label": "Button background",
            "default": "#222222"
          },
          {
            "type": "color",
            "id": "btn_label_bh",
            "label": "Button background hover",
            "default": "#000000"
          },
          {
            "type": "select",
            "id": "text_align",
            "label": "Text align",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "center",
                "label": "Center"
              },
              {
                "value": "right",
                "label": "Right"
              }
            ]
          },
          {
            "type": "color",
            "id": "bg",
            "label": "Background"
          },
          {
            "type": "range",
            "id": "bg_opacity",
            "min": 0,
            "max": 100,
            "step": 10,
            "label": "Background opacity",
            "default": 100
          },
          {
            "type": "text",
            "id": "class",
            "label": "Class"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Vinova Image Gallery",
        "category": "Image",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}

<style>
  {%- assign bg_image = sst.background_image -%}
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ sst.distance_top }}px;
    padding-bottom: {{ sst.distance_bottom }}px;
    {% if sst.background_color != blank %}
      background-color: {{ sst.background_color }};
    {% endif %}
    {% if bg_image.src != blank %}
      background-image: url("{{ bg_image | img_url: '1920x' }}");background-repeat: no-repeat;background-size: cover;
    {% endif %}
  }
  #shopify-section-{{ section.id }} .gallery-image__item {
    border-radius: {{ sst.bd_radius }}px;
  }
  {% for block in section.blocks %}
    {% assign bst = block.settings %}
    #shopify-section-{{ section.id }} .bg .cap-{{ forloop.index }} {
      background-color: rgba({{ bst.bg | color_to_rgb | remove: 'rgb(' | remove: 'rgba(' | remove: ')' | remove: ', 0.0' }}, {{ bst.bg_opacity }}%);
    }
    #shopify-section-{{ section.id }} .cap-{{ forloop.index }} .btn:hover {
      color: {{ bst.btn_label_ch }} !important;
      border-color: {{ bst.btn_label_bh }} !important;
      background-color: {{ bst.btn_label_bh }} !important;
    }
    #shopify-section-{{ section.id }} .cap-{{ forloop.index }} .gallery-image__text1 {
      font-size: {{ bst.cta_label_n }}px;
    }
    #shopify-section-{{ section.id }} .cap-{{ forloop.index }} .gallery-image__text2 {
      font-size: {{ bst.cta_label2_n }}px;
    }
    @media(max-width: 1199px) {
      #shopify-section-{{ section.id }} .cap-{{ forloop.index }} .gallery-image__text1 {
        font-size: {{ bst.cta_label_n | times: 0.8 | round: 0 }}px;
      }
      #shopify-section-{{ section.id }} .cap-{{ forloop.index }} .gallery-image__text2 {
        font-size: {{ bst.cta_label2_n | times: 0.8 | round: 0 }}px;
      }
    }
    @media(max-width: 767px) {
      #shopify-section-{{ section.id }} .cap-{{ forloop.index }} .gallery-image__text1 {
        font-size: clamp(14px, {{ bst.cta_label_n | times: 0.6 | round: 0 | append: 'px' }}, 20px);
      }
      #shopify-section-{{ section.id }} .cap-{{ forloop.index }} .gallery-image__text2 {
        font-size: min(11px, {{ bst.cta_label2_n | times: 0.6 | round: 0 | append: 'px' }}, 16px);
      }
    }
  {% endfor %}
</style>
